{
  "family": "langfuse-web",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::139772274983:role/LangfuseEcsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::139772274983:role/LangfuseEcsTaskRole",
  "containerDefinitions": [
    {
      "name": "web",
      "image": "139772274983.dkr.ecr.ap-northeast-1.amazonaws.com/web:placeholder",
      "essential": true,
      "portMappings": [
        { "containerPort": 3000, "protocol": "tcp" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/langfuse/web",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "secrets": [
        { "name": "DATABASE_URL", "valueFrom": "arn:aws:ssm:ap-northeast-1:139772274983:parameter/staging/langfuse/DATABASE_URL" },
        { "name": "CLICKHOUSE_URL", "valueFrom": "arn:aws:ssm:ap-northeast-1:139772274983:parameter/staging/langfuse/CLICKHOUSE_URL" },
        { "name": "NEXTAUTH_SECRET", "valueFrom": "arn:aws:ssm:ap-northeast-1:139772274983:parameter/staging/langfuse/NEXTAUTH_SECRET" },
        { "name": "SALT", "valueFrom": "arn:aws:ssm:ap-northeast-1:139772274983:parameter/staging/langfuse/SALT" }
      ],
      "environment": [
        { "name": "PORT", "value": "3000" },
        { "name": "NODE_ENV", "value": "production" },
        { "name": "NEXTAUTH_URL", "value": "https://cloud.langfuse.com" },
        { "name": "LANGFUSE_ENABLE_EXPERIMENTAL_FEATURES", "value": "false" }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "wget -qO- http://localhost:3000/api/public/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}


